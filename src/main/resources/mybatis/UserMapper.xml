<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <insert id="adduser" >
            INSERT INTO `user` (`username`,`password`,`age`,`class`,`match`,`chinese`)
            VALUES (#{username} , #{password},#{age},#{class},#{match},#{chinese});
    </insert>
    
    <select id="getUserById" resultType="com.example.demo.entities.User">
            select * from `user` where id=#{id}
    </select>

    <select id="getUserByName" resultType="com.example.demo.entities.User">
            select * from `user` where username=#{username}
    </select>

    <select id="getUsers" resultType="com.example.demo.entities.User" parameterType="java.util.List">
            select * from `user` where id in
            <foreach item="item" collection="ids" separator="," open="(" close=")" index="index">
            #{item}
            </foreach>
    </select>

    <select id="queryUsers" resultType="com.example.demo.entities.User">
            select * from user
            where  1=1
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="username != null">
                and username=#{username}
            </if>
    </select>

    <update id="updateUser">
            UPDATE `user`
        SET `username`=#{username},`password`=#{password},`age`=#{age},`class`=#{class},`match`=#{match},`chinese`=#{chinese}
        WHERE `id`=#{id}
    </update>

    <delete id="deleteUserById" >
            delete from `user` where id = #{id}
    </delete>

</mapper>